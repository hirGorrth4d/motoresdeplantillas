html
    head
        title Producto
        link(rel="stylesheet",
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    body
        h1 Carga Tu Producto 
        form(action="/productos"
        method="post")
            div(class="mb-3")
                label(class="form-label") Producto
                input(type="text"
                name="product"
                placeholder="producto"
                class="form-control")
            div(class="mb-3")
                label Precio
                input(type="number"
                name="price"
                placeholder="price")
                button(type="submit") Enviar
        a(href="/productos") Productos
